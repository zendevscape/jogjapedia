{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "array-callback-return": 0,
    "class-methods-use-this": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "dependencies": [
          "**/service-worker.js"
        ]
      }
    ],
    "no-console": 0,
    "no-empty-function": 0,
    "no-new": 0,
    "no-restricted-globals": 0,
    "no-underscore-dangle": 0
  }
}